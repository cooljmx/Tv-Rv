<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>ТВ-РВ</title>
        <link href="~/Content/bootstrap2/bootstrap.css" type="text/css" rel="stylesheet" />
        <link href="~/Content/Site.css" type="text/css" rel="stylesheet" />
        <script src="~/Scripts/jquery-1.9.0.min.js" type="text/javascript"></script>
        <script src="~/Scripts/bootstrap2/bootstrap.js" type="text/javascript"></script>
    </head>
    <body>
        <div id="mainHeader" class="row">
            <a id="caption" class="span12" href="@Url.Action("Index","Home")">ТВ-РВ</a>
            <div class="pull-right" id="loginDiv">
                @if (Request.IsAuthenticated)
                {
                    <a href="@Url.Action("Logout","Account")">Выйти</a>
                }
                else
                {
                    <a href="@Url.Action("Login","Account")">Войти</a>
                }
            </div>
        </div>
        @if (Request.IsAuthenticated)
        {
            <div id="mainMenu" class="row-fluid">
                <div class="navbar">
                    <ul class="nav">
                        <li><a href="@Url.Action("Index","TvRvConfigurator")">Конфигуратор</a></li>
                        <li><a href="#">Link</a></li>
                    </ul>
                </div>
            </div>
        }
        @RenderBody()
    </body>
</html>
